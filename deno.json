{
  "tasks": {
    "start": "deno run -A index.ts"
  },
  "fmt": {
    "files": {
      "include": ["src/**/*"],
      "exclude": ["src/testdata/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 120,
      "indentWidth": 2,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  },
  "importMap": "./import_map.json"
}
